<div class="row" id="main_visualisation_wrapper_row_1">

	<div class="col-md-2">
		<div id="code_wrapper">
			
			<!-- <button class="myButton" onclick="load();">Load Program in RAM</button>
			<button class="myButtonRed" onclick="load(); run();">Run Program</button> -->
			
			<textarea id="code_area" rows=26 wrap="off">
ALL CODE BELOW
			</textarea>

		</div>
	</div>
	
	<div class="col-md-4">
		<div id="CPU_wrapper">
			<div class="row">

				<div class="col-md-3" id="general_register_wrapper">
					<!-- create General Purpose Registers (from 0 to 9) -->
					<% for (var i = 0; i < 10; i++) { %>
						<div id="register_<%= i %>_wrapper">
							<tr>
								<td>Register <%= i.toString() %><input readonly id="general_register_<%= i %>" type="text" value="00" /></td>
							</tr>
						</div>
					<% } %>
				</div>
					
				<div class="col-md-5" id="CPU_column_2">

					<div id="ALU_wrapper">
						Arithemtic Logic Unit
						<input readonly id="ALU" type="text" value="" />
					</div>
					
					<div id="accumulator_wrapper">
						Accumulator
						<input readonly id="accumulator" type="text" value="00" />
					</div>

					<div id="PC_wrapper">
						Program Counter
						<input readonly id="PC" type="text" value="00" />
					</div>

					<div id="decode_unit_wrapper">
						Decode Unit
						<input readonly id="decode_unit" type="text" value="" />
					</div>

					<div id="CIR_wrapper">
						Current Instruction Register
						<input readonly id="CIR" type="text" value="00" />
					</div>

				</div>

				<div class="col-md-4" id="CPU_column_3">

					<div id="MAR_wrapper">
						Memory Address Register
						<input readonly id="MAR" type="text" value="00" />
					</div>
					
					<div id="status_register_wrapper">
						Status Register
						<input readonly id="status_register" type="text" value="00" />
					</div>
					
					<div id="control_unit_wrapper">
						Control Unit
						<input readonly id="control_unit" type="text" value="" />
					</div>
					
					<div id="clock_wrapper">
						Clock
						<input readonly id="clock" type="text" value="" />
					</div>
					
					<div id="MBR_wrapper">
						Memory Buffer Register
						<input readonly id="MBR" type="text" value="00" />
					</div>

				</div>

				</div>
		</div>
	</div>

	<div class="col-md-1">

		<!-- <div id="address_bus_wrapper">
			Address Bus
		</div> -->

		<!-- <canvas id="arrows_canvas">Browser doesn't support address buses being shown</canvas> -->

	</div>
	
	<div class="col-md-5">
		<div id="RAM_wrapper">
			
			<table id="RAM">
				<!-- create RAM (memory locations from 00 to 99) -->
				<% for (var i = 0; i < 10; i++) { %>
					<tr>
						<% for (var j = 0; j < 10; j++) { %>
							
							<% var k = (i * 10) + j %>
							<% var k_str = k.toString() %>

							<%# for memory locations 0-9, we want to display 00, 01, etc. %>
							<% while (k_str.length < 2) { %>
								<% k_str = '0' + k_str %>
							<% } %>

							<td id="memory_<%= k_str %>_wrapper"><%= k_str %><input id="memory_location_<%= k %>" type="text" value="00" /></td>

						<% } %>
					</tr>
				<% } %>
			</table>
		</div>

	</div>
</div>

